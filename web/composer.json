{
    "name": "kus/communications-ms",
    "description": "Communications API Microservice",
    "type": "project",
    "private": true,
    "require": {
        "php": "^8.0",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "bogdaan/viber-bot-php": "^0.0.14",
        "doctrine/dbal": "~3",
        "guzzlehttp/guzzle": "~6 || ~7",
        "irazasyed/telegram-bot-sdk": "^3.5",
        "laravel/lumen-framework": "~8",
        "linecorp/line-bot-sdk": "~7",
        "sumra/sdk": "*",
        "team-reflex/discord-php": "^7.0",
        "twilio/sdk": "~6"
    },
    "require-dev": {
        "fakerphp/faker": "~1",
        "mockery/mockery": "~1",
        "phpunit/phpunit": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../sumra-sdk",
            "options": {
                "symlink": false
            }
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
