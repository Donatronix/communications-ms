{
    "name": "sumra/meet-wrapper-ms",
    "description": "Sumra Meet Wrapper API Microservice",
    "type": "project",
    "private": true,
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-openssl": "*",
        "bogdaan/viber-bot-php": "^0.0.14",
        "darkaonline/swagger-lume": "~8",
        "doctrine/dbal": "~3",
        "fruitcake/laravel-cors": "~2",
        "guzzlehttp/guzzle": "^6.3 || ^7.0.1",
        "irazasyed/telegram-bot-sdk": "^3.4",
        "laravel/lumen-framework": "~8",
        "linecorp/line-bot-sdk": "^7.3",
        "sumra/json-api": "*",
        "sumra/pubsub": "*",
        "vladimir-yuldashev/laravel-queue-rabbitmq": "~11"
    },
    "require-dev": {
        "fakerphp/faker": "~1",
        "mockery/mockery": "~1",
        "phpunit/phpunit": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../pubsub",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "../json-api",
            "options": {
                "symlink": false
            }
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
